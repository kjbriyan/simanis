<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/whiteTextColor"
    app:cardCornerRadius="5dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp">

            <TextView
                style="@style/reportContentText"
                android:id="@+id/id_txt_nama_proyek"
                android:text="Nama Pekerjaan"
                android:textColor="#000000"
                />
            <TextView
                style="@style/viewParent.headerText"
                android:id="@+id/id_txt_selisih"
                android:textColor="#505050"
                android:textSize="11sp"
                android:text="pekerjaan 88 % | 30 hari tersisa"/>

            <TextView
                style="@style/viewParent.headerText"
                android:id="@+id/tv_vol_kontrak"
                android:textColor="#505050"
                android:textSize="11sp"
                android:text=""/>
            <TextView
                style="@style/viewParent.headerText"
                android:id="@+id/tv_bobot_kontrak"
                android:textColor="#505050"
                android:textSize="11sp"
                android:text=""/>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>