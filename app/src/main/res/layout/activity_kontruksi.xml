<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_height="match_parent"
    tools:context=".activity_ppspm.KontruksiActivity">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_weight="60"
        android:orientation="vertical"
        android:weightSum="100"
        android:layout_height="match_parent">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_weight="75"
            android:layout_height="match_parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="match_parent">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="20"
                    android:paddingLeft="8dp"
                    android:weightSum="100"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:textSize="18sp"
                        android:gravity="center_vertical"
                        android:text="Si Manis"
                        android:layout_height="match_parent">
                    </TextView>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#777777" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_weight="50"
                        android:gravity="center_vertical"
                        android:textSize="12sp"
                        android:id="@+id/idUserEmail"
                        android:text="Concept_Design@yahoo.com"
                        android:layout_height="match_parent">

                    </TextView>

                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_weight="80"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="60dp"
                            android:id="@+id/id_img_prof"
                            android:layout_centerInParent="true"
                            android:layout_height="60dp"
                            android:src="@drawable/builder">
                        </ImageView>
                    </RelativeLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_weight="25"
            android:src="@drawable/foto"
            android:scaleType="fitXY"
            android:layout_height="match_parent">

        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="40"
        android:weightSum="100"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="50"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/card1"
                    android:background="@color/headercard"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:text="SISTEM MONITORING"
                        android:textSize="15sp"
                        android:textColor="@color/whiteTextColor"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/card1"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="60"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id_btn_progress"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="vertical"
                                android:id="@+id/id_btn_konstruksi"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:id="@id/btniniprog"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:id="@+id/idimg3"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/officer"
                                        android:textAlignment="center">
                                    </ImageView>

                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <TextView
                                    style="@style/reportContentText"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:text="Perencana"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/btniniprog"
                                    android:textColor="#979797"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id_btn_history"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/id_btn_pelaksana"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:id="@+id/btnopo"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:id="@+id/idimg4"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/car"
                                        android:textAlignment="center">
                                    </ImageView>

                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <TextView
                                    style="@style/reportContentText"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:text="Pelaksana"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/btnopo"
                                    android:textColor="#979797"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id_btn_history2"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:orientation="vertical"
                                android:layout_centerHorizontal="true"
                                android:id="@+id/id_btn_habis_pakai"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:id="@+id/btnopo2"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:id="@+id/idimg42"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/consumer"
                                        android:textAlignment="center">
                                    </ImageView>

                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <TextView
                                    style="@style/reportContentText"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:text="Pengawas"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/btnopo"
                                    android:textColor="#979797"
                                    android:textSize="12sp" />
                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="50"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/card2"
                    android:background="@color/headercard"
                    android:layout_height="50dp">
                    <TextView
                        android:layout_marginLeft="16dp"
                        android:layout_width="match_parent"
                        android:text="SISTEM MONITORING"
                        android:textSize="15sp"
                        android:textColor="@color/whiteTextColor"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/card2"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:weightSum="40"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="20"
                            android:layout_marginTop="15dp"
                            android:id="@+id/id_btn_progresss"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:orientation="vertical"
                                android:id="@+id/id_btn_grap"
                                android:layout_height="wrap_content">
                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:orientation="vertical"
                                    android:id="@id/btniniprog"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:id="@+id/idimg6"
                                        android:layout_height="40dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/business"
                                        android:textAlignment="center">
                                    </ImageView>

                                </androidx.appcompat.widget.LinearLayoutCompat>
                                <TextView
                                    style="@style/reportContentText"
                                    android:layout_gravity="center"
                                    android:padding="8dp"
                                    android:text="Laporan Grafik"
                                    android:textAlignment="center"
                                    android:layout_below="@+id/btniniprog"
                                    android:textColor="#979797"
                                    android:textSize="12sp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.appcompat.widget.LinearLayoutCompat>
